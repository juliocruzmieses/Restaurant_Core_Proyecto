@model IEnumerable<Restaurant_Core.Models.UsuarioModel>

@{
    ViewData["Title"] = "ListadoUsuarios";
}

<h1>Listado de Usuarios</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ape_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fono_user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom_rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom_distrito)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ape_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fono_user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_distrito)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id_usuario })
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })*@
                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
