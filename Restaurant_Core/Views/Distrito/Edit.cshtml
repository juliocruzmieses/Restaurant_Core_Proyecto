@model Restaurant_Core.Models.DistritoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Actualizacion de datos</h1>

<h4>Distrito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idDistrito" class="control-label"></label>
                <input asp-for="idDistrito" class="form-control" readonly/>
                <span asp-validation-for="idDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nomDistrito" class="control-label"></label>
                <input asp-for="nomDistrito" class="form-control" />
                <span asp-validation-for="nomDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-action="ListadoDistritos" asp-controller="Distrito" class="btn btn-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

<div>@ViewBag.mensaje</div>

