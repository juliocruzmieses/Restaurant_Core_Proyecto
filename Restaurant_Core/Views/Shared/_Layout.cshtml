<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant_Core</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/stilos_main.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <ul class="list-unstyled components mb-5">
                    <li class="">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li>
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Mantenimiento</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li><a asp-area="" asp-controller="Usuario" asp-action="ListadoUsuarios">Usuarios</a></li>
                            <li><a asp-area="" asp-controller="Producto" asp-action="ListadoProductos">Productos</a></li>
                            <li><a asp-area="" asp-controller="Rol" asp-action="ListadoRoles">Roles</a></li>
                            <li><a asp-area="" asp-controller="Distrito" asp-action="ListadoDistritos">Distritos</a></li>
                            <li><a asp-area="" asp-controller="Categoria" asp-action="ListadoCategorias">Categorias</a></li>
                            <li><a asp-area="" asp-controller="Mesa" asp-action="ListadoMesas">Mesas</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Pedido</a></li>
                    <li><a href="#">Configuraci&oacute;n</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">Acerca de</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contacto</a></li>
                </ul>
                <div class="footer">
                    <p>Copyright &copy; @DateTime.Now.Year All rights reserved</p>
                </div>
            </div>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                @*<a class="nav-link" href="#">Cerrar sesi&oacute;n</a>*@
                                <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Salir">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>





    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
