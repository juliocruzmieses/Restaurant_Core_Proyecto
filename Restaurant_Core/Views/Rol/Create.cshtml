@model Restaurant_Core.Models.RolModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Registro de roles</h1>

<h4>Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomRol" class="control-label"></label>
                <input asp-for="nomRol" class="form-control" />
                <span asp-validation-for="nomRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Create" asp-controller="Rol" class="btn btn-primary">Nuevo</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="ListadoRoles" asp-controller="Rol" class="btn btn-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

<div>@ViewBag.mensaje</div>

